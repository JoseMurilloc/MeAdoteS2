{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "removeComments": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ],
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@services/*": ["./src/app/services/*"],
      "@middleware/*": ["./src/app/middlewares/*"],
      "@errors/*": ["./src/app/errors/*"],
      "@data/*": ["./src/app/data/*"],
      "@config/*": ["./src/config/*"],
      "@utils/*": ["./src/app/utils/*"],
    }
  },
  "include": [
    "src/**/*",
  ]
}
